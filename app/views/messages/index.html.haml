.chat-side
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu__new-group
          = link_to root_path do
            = fa_icon 'edit'
        .side-header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog'
  .groups
    .group
      .group__group-name
        グループ名
      .group__message
        直近のメッセージ
      
.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        グループ名
      .main-header__left-box__member-list
        Member: メンバー名
    .main-header__edit-btn
      Edit
  .messages
    .message
      .message__upper-info
        .message__upper-info__talker
          ユーザー名
        .message__upper-info__date
          2019/10/31(Thu) 12:17:57
      .message__text
        メッセージ内容
  .form
    .new-message
      .input-box
        %input.input-box__text{name: "message", placeholder: "type a message", type: "text"}/
        %label.input-box__image{for: "message_image"}
          %i.fa.fa-image
          %input#message_image.input-box__image__file{name:"message[image]", type: "file"}/
      %input.submit-btn{name: "commit", value:"Send", type: "submit"}/

